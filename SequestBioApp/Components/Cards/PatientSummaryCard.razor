@using RiskCalculator.Models.Cards
@using RiskCalculator.Services.Cards

<div class="professional-card">
    @if (IsLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p class="loading-text">Loading patient data...</p>
        </div>
    }
    else if (Model != null && Model.HasClinicalData)
    {
        <div class="card-content">
            <!-- Header Section -->
            <div class="card-header-section">
                <h2 class="main-title">Patient Summary</h2>
                <p class="subtitle">Clinical information and risk factors</p>
            </div>

            <!-- Patient Information Section -->
            <div class="patient-info-section">
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Full Name</span>
                        <span class="info-value">@Model.ClinicalInfo.FullName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Patient ID</span>
                        <span class="info-value">@Model.ClinicalInfo.PatientId</span>
                    </div>
                    @if (Model.ClinicalInfo.DateOfBirth.HasValue)
                    {
                        <div class="info-item">
                            <span class="info-label">Date of Birth</span>
                            <span class="info-value">@Model.ClinicalInfo.DateOfBirth.Value.ToString("MMM dd, yyyy")</span>
                        </div>
                    }
                    <div class="info-item">
                        <span class="info-label">Report Date</span>
                        <span class="info-value">@Model.ClinicalInfo.ReportGenerationDate.ToString("MMM dd, yyyy")</span>
                    </div>
                </div>
            </div>

            <!-- Diagnosis Section -->
            <div class="diagnosis-section">
                <h3 class="section-title">Diagnosis Information</h3>
                <div class="diagnosis-grid">
                    @if (!string.IsNullOrEmpty(Model.ClinicalInfo.CancerType))
                    {
                        <div class="diagnosis-item">
                            <span class="diagnosis-label">Cancer Type</span>
                            <span class="diagnosis-value">@Model.ClinicalInfo.CancerType</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ClinicalInfo.CancerSubtypeStage))
                    {
                        <div class="diagnosis-item">
                            <span class="diagnosis-label">Stage & Subtype</span>
                            <span class="diagnosis-value">@Model.ClinicalInfo.CancerSubtypeStage</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ClinicalInfo.BiomarkerStatus))
                    {
                        <div class="diagnosis-item">
                            <span class="diagnosis-label">Biomarker Status</span>
                            <span class="diagnosis-value">@Model.ClinicalInfo.BiomarkerStatus</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ClinicalInfo.PriorTreatments))
                    {
                        <div class="diagnosis-item full-width">
                            <span class="diagnosis-label">Prior Treatments</span>
                            <span class="diagnosis-value">@Model.ClinicalInfo.PriorTreatments</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Risk Factors Section -->
            @if (Model.IdentifiedRiskFactors.Any())
            {
                <div class="risk-factors-section">
                    <h3 class="section-title">Identified Risk Factors</h3>
                    <div class="risk-factors-list">
                        @foreach (var factor in Model.IdentifiedRiskFactors)
                        {
                            <div class="risk-factor-item">
                                <div class="risk-factor-indicator"></div>
                                <span class="risk-factor-text">@factor</span>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Clinical Summary Section -->
            @if (!string.IsNullOrEmpty(Model.ClinicalSummary))
            {
                <div class="clinical-summary-section">
                    <h3 class="section-title">Clinical Summary</h3>
                    <p class="summary-text">@Model.ClinicalSummary</p>
                </div>
            }

            <!-- Footer Section -->
            @if (!string.IsNullOrEmpty(Model.ClinicalInfo.ReportingPhysician) || !string.IsNullOrEmpty(Model.ClinicalInfo.Institution))
            {
                <div class="footer-section">
                    @if (!string.IsNullOrEmpty(Model.ClinicalInfo.ReportingPhysician))
                    {
                        <span class="footer-text">Physician: @Model.ClinicalInfo.ReportingPhysician</span>
                    }
                    @if (!string.IsNullOrEmpty(Model.ClinicalInfo.Institution))
                    {
                        <span class="footer-text">Institution: @Model.ClinicalInfo.Institution</span>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-data-container">
            <div class="no-data-icon">ðŸ‘¤</div>
            <h3 class="no-data-title">No Patient Data Available</h3>
            <p class="no-data-description">Enter patient information to see clinical summary</p>
        </div>
    }
</div>

<style>
    .professional-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 32px;
        margin-bottom: 24px;
        border: 1px solid #f1f5f9;
        transition: all 0.3s ease;
    }

    .professional-card:hover {
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        transform: translateY(-2px);
    }

    /* Header Section */
    .card-header-section {
        text-align: center;
        margin-bottom: 32px;
    }

    .main-title {
        font-size: 28px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .subtitle {
        font-size: 16px;
        color: #64748b;
        margin: 0;
        font-weight: 400;
        letter-spacing: 0.2px;
    }

    /* Patient Information Section */
    .patient-info-section {
        margin-bottom: 32px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 16px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        padding: 16px;
        background: #f8fafc;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

    .info-label {
        font-size: 12px;
        font-weight: 600;
        color: #64748b;
        margin-bottom: 4px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .info-value {
        font-size: 16px;
        font-weight: 600;
        color: #1e293b;
    }

    /* Section Titles */
    .section-title {
        font-size: 20px;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
        letter-spacing: -0.3px;
    }

    /* Diagnosis Section */
    .diagnosis-section {
        margin-bottom: 32px;
    }

    .diagnosis-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
    }

    .diagnosis-item {
        display: flex;
        flex-direction: column;
        padding: 12px;
        background: #fefefe;
        border-radius: 6px;
        border: 1px solid #f1f5f9;
    }

    .diagnosis-item.full-width {
        grid-column: 1 / -1;
    }

    .diagnosis-label {
        font-size: 11px;
        font-weight: 600;
        color: #64748b;
        margin-bottom: 4px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .diagnosis-value {
        font-size: 14px;
        font-weight: 500;
        color: #374151;
        line-height: 1.4;
    }

    /* Risk Factors Section */
    .risk-factors-section {
        margin-bottom: 32px;
    }

    .risk-factors-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .risk-factor-item {
        display: flex;
        align-items: center;
        padding: 12px 16px;
        background: #fef3c7;
        border-radius: 6px;
        border: 1px solid #fbbf24;
    }

    .risk-factor-indicator {
        width: 8px;
        height: 8px;
        background: #f59e0b;
        border-radius: 50%;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .risk-factor-text {
        font-size: 14px;
        font-weight: 500;
        color: #92400e;
    }

    /* Clinical Summary Section */
    .clinical-summary-section {
        margin-bottom: 32px;
    }

    .summary-text {
        font-size: 14px;
        color: #64748b;
        line-height: 1.6;
        margin: 0;
        padding: 16px;
        background: #f8fafc;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

    /* Footer Section */
    .footer-section {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        justify-content: center;
        padding-top: 24px;
        border-top: 1px solid #e2e8f0;
    }

    .footer-text {
        font-size: 12px;
        color: #94a3b8;
        font-weight: 500;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
    }

    .loading-spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #f1f5f9;
        border-top: 4px solid #3b82f6;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 24px;
    }

    .loading-text {
        font-size: 16px;
        color: #64748b;
        margin: 0;
        font-weight: 500;
    }

    /* No Data State */
    .no-data-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
        text-align: center;
    }

    .no-data-icon {
        font-size: 48px;
        margin-bottom: 16px;
        opacity: 0.6;
    }

    .no-data-title {
        font-size: 20px;
        font-weight: 600;
        color: #374151;
        margin: 0 0 8px 0;
    }

    .no-data-description {
        font-size: 14px;
        color: #64748b;
        margin: 0;
        max-width: 300px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .professional-card {
            padding: 24px;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .diagnosis-grid {
            grid-template-columns: 1fr;
        }

        .main-title {
            font-size: 24px;
        }

        .subtitle {
            font-size: 14px;
        }

        .section-title {
            font-size: 18px;
        }

        .footer-section {
            flex-direction: column;
            text-align: center;
        }
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

@code {
    [Parameter] public PatientSummaryModel? Model { get; set; }
    [Parameter] public bool IsLoading { get; set; } = false;
} 