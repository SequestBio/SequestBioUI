@using RiskCalculator.Models.Cards
@using RiskCalculator.Services.Cards

<div class="card mb-4">
    <div class="card-header">
        <h5>
            <i class="fas fa-chart-bar me-2"></i>
            Benchmark Comparison
        </h5>
    </div>
    <div class="card-body">
        @if (IsLoading)
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (Data != null)
        {
            <div class="row">
                <!-- Sequestone Score Performance -->
                <div class="col-md-6">
                    <h6 class="text-muted">SequestBio Score</h6>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Score</span>
                        <span class="badge bg-primary">@Data.SequestoneScore.ToString("F1")</span>
                    </div>
                    @if (Data.PerformanceMetrics.ContainsKey("AUC"))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>AUC</span>
                            <span class="badge bg-success">@Data.PerformanceMetrics["AUC"].ToString("F3")</span>
                        </div>
                    }
                    @if (Data.PerformanceMetrics.ContainsKey("Sensitivity"))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Sensitivity</span>
                            <span class="badge bg-info">@Data.PerformanceMetrics["Sensitivity"].ToString("F3")</span>
                        </div>
                    }
                    @if (Data.PerformanceMetrics.ContainsKey("Specificity"))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Specificity</span>
                            <span class="badge bg-warning">@Data.PerformanceMetrics["Specificity"].ToString("F3")</span>
                        </div>
                    }
                </div>
                
                <!-- Benchmark Methods -->
                <div class="col-md-6">
                    <h6 class="text-muted">Benchmark Methods</h6>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>Clinical Factors Only</strong>
                            <span class="badge @(Data.ClinicalFactorsScore < Data.SequestoneScore ? "bg-danger" : "bg-success")">
                                @Data.ClinicalFactorsScore.ToString("F1")
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>Traditional Staging</strong>
                            <span class="badge @(Data.StagingScore < Data.SequestoneScore ? "bg-danger" : "bg-success")">
                                @Data.StagingScore.ToString("F1")
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>Molecular Subtype</strong>
                            <span class="badge @(Data.MolecularSubtypeScore < Data.SequestoneScore ? "bg-danger" : "bg-success")">
                                @Data.MolecularSubtypeScore.ToString("F1")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-12">
                    <h6 class="text-muted">Performance Summary</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Method</th>
                                    <th>Score</th>
                                    <th>Relative Performance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-primary">
                                    <td><strong>SequestBio Score</strong></td>
                                    <td>@Data.SequestoneScore.ToString("F1")</td>
                                    <td>Baseline</td>
                                </tr>
                                <tr>
                                    <td>Clinical Factors Only</td>
                                    <td>@Data.ClinicalFactorsScore.ToString("F1")</td>
                                    <td>@((Data.ClinicalFactorsScore - Data.SequestoneScore).ToString("+0.0;-0.0;0.0"))</td>
                                </tr>
                                <tr>
                                    <td>Traditional Staging</td>
                                    <td>@Data.StagingScore.ToString("F1")</td>
                                    <td>@((Data.StagingScore - Data.SequestoneScore).ToString("+0.0;-0.0;0.0"))</td>
                                </tr>
                                <tr>
                                    <td>Molecular Subtype</td>
                                    <td>@Data.MolecularSubtypeScore.ToString("F1")</td>
                                    <td>@((Data.MolecularSubtypeScore - Data.SequestoneScore).ToString("+0.0;-0.0;0.0"))</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <h6 class="text-muted">Summary</h6>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(Data.ComparisonSummary))
                    {
                        @Data.ComparisonSummary
                    }
                    else
                    {
                        <text>The SequestBio Score provides a more comprehensive risk assessment by incorporating molecular and genomic features beyond traditional clinical factors.</text>
                    }
                </p>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No benchmark data available. Comparison requires completed risk analysis.
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public bool IsLoading { get; set; } = false;
    [Parameter] public BenchmarkComparisonModel? Model { get; set; }
    
    private BenchmarkComparisonModel? Data => Model;
} 