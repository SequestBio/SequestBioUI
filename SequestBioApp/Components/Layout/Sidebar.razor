@* Components/Layout/Sidebar.razor *@

<div class="sidebar @(IsOpen ? "sidebar-open" : "sidebar-closed")">
    <!-- Sidebar Header -->
    <div class="sidebar-header">
        <h2 class="sidebar-title">SequestBio</h2>
    </div>

    <!-- User Profile Section -->
    <div class="user-profile">
        <div class="user-avatar">
            <div class="avatar-circle">
                <span class="avatar-initials">Dr</span>
            </div>
        </div>
        <div class="user-info">
            <div class="user-name">Dr. Johnson</div>
            <div class="user-role">Oncologist</div>
        </div>
        <div class="settings-button" @onclick="@(() => HandleItemClick("settings"))">
            <div class="settings-icon"></div>
        </div>
    </div>

    <!-- Main Features -->
    <div class="sidebar-content">
        <!-- Treatment Management -->
        <div class="feature-item" @onclick="@(() => HandleItemClick("treatment-management"))">
            <div class="feature-icon treatment-icon"></div>
            <span class="feature-label">Treatment Management</span>
            <div class="feature-arrow">&gt;</div>
        </div>

        <div class="feature-separator"></div>

        <!-- Adjuvant Therapy -->
        <div class="feature-item" @onclick="@(() => HandleItemClick("adjuvant-therapy"))">
            <div class="feature-icon therapy-icon"></div>
            <span class="feature-label">Adjuvant Therapy</span>
            <div class="feature-arrow">&gt;</div>
        </div>

        <div class="feature-separator"></div>

        <!-- Exercise Prescription -->
        <div class="feature-item" @onclick="@(() => HandleItemClick("exercise-prescription"))">
            <div class="feature-icon exercise-icon"></div>
            <span class="feature-label">Exercise Prescription</span>
            <div class="feature-arrow">&gt;</div>
        </div>
    </div>

    <!-- Ask Expert Chat Card -->
    <div class="chat-card">
        <div class="chat-card-content" @onclick="@(() => HandleItemClick("ask-expert"))">
            <div class="chat-icon">Chat</div>
            <div class="chat-text">
                <div class="chat-title">Ask Expert</div>
                <div class="chat-subtitle">Get instant clinical insights</div>
            </div>
        </div>
    </div>
</div>

<!-- Mobile Overlay -->
<div class="sidebar-overlay @(IsOpen ? "overlay-visible" : "")" @onclick="CloseSidebar"></div>

<style>
    /* Import Inter font */
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    /* Sidebar Base Styles */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 280px;
        height: 100vh;
        background: #ffffff;
        border-right: 1px solid #e8e8e8;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.08);
        overflow-y: auto;
        z-index: 1000;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        transform: translateX(0);
        display: flex;
        flex-direction: column;
    }

    /* Sidebar Header */
    .sidebar-header {
        padding: 32px 24px 24px;
        text-align: center;
        border-bottom: 1px solid #f0f0f0;
    }

    .sidebar-title {
        font-size: 22px;
        font-weight: 600;
        color: #1d1d1f;
        margin: 0;
        line-height: 1.2;
        letter-spacing: -0.5px;
    }

    /* User Profile Section */
    .user-profile {
        display: flex;
        align-items: center;
        padding: 20px 24px;
        border-bottom: 1px solid #f0f0f0;
        gap: 12px;
    }

    .user-avatar {
        flex-shrink: 0;
    }

    .avatar-circle {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0, 122, 255, 0.25);
    }

    .avatar-initials {
        color: white;
        font-size: 16px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .user-info {
        flex: 1;
        min-width: 0;
    }

    .user-name {
        font-size: 15px;
        font-weight: 600;
        color: #1d1d1f;
        margin-bottom: 2px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .user-role {
        font-size: 13px;
        color: #86868b;
        font-weight: 400;
    }

    .settings-button {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        background: #f6f6f6;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .settings-button:hover {
        background: #e8e8e8;
        transform: scale(1.05);
    }

    .settings-icon {
        width: 16px;
        height: 16px;
        background: #86868b;
        border-radius: 2px;
        position: relative;
    }

    .settings-icon::before {
        content: '';
        position: absolute;
        width: 12px;
        height: 1px;
        background: #86868b;
        top: 50%;
        left: 2px;
        transform: translateY(-50%);
    }

    .settings-icon::after {
        content: '';
        position: absolute;
        width: 1px;
        height: 12px;
        background: #86868b;
        top: 2px;
        left: 50%;
        transform: translateX(-50%);
    }

    /* Main Content */
    .sidebar-content {
        flex: 1;
        padding: 24px;
    }

    /* Feature Items */
    .feature-item {
        display: flex;
        align-items: center;
        padding: 16px 20px;
        margin-bottom: 8px;
        border-radius: 12px;
        background: #fbfbfb;
        border: 1px solid transparent;
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .feature-item:hover {
        background: #f0f8ff;
        border-color: #d0e8ff;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(0, 122, 255, 0.15);
    }

    .feature-item:active {
        transform: translateY(0);
    }

    .feature-icon {
        width: 24px;
        height: 24px;
        border-radius: 6px;
        margin-right: 16px;
        flex-shrink: 0;
        position: relative;
    }

    .treatment-icon {
        background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
    }

    .therapy-icon {
        background: linear-gradient(135deg, #FF9500 0%, #FF9F0A 100%);
    }

    .exercise-icon {
        background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
    }

    .feature-icon::after {
        content: '';
        position: absolute;
        width: 12px;
        height: 12px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .feature-label {
        flex: 1;
        font-size: 15px;
        font-weight: 500;
        color: #1d1d1f;
        line-height: 1.3;
    }

    .feature-arrow {
        color: #86868b;
        font-size: 16px;
        font-weight: 300;
        opacity: 0;
        transition: all 0.2s ease;
        transform: translateX(-8px);
    }

    .feature-item:hover .feature-arrow {
        opacity: 1;
        transform: translateX(0);
    }

    /* Feature Separator */
    .feature-separator {
        height: 1px;
        background: linear-gradient(90deg, transparent 0%, #e8e8e8 20%, #e8e8e8 80%, transparent 100%);
        margin: 16px 0;
    }

    /* Ask Expert Chat Card */
    .chat-card {
        margin: 24px;
        margin-top: auto;
        padding-bottom: 24px;
    }

    .chat-card-content {
        background: linear-gradient(135deg, #5856D6 0%, #007AFF 100%);
        border-radius: 16px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .chat-card-content:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(88, 86, 214, 0.4);
    }

    .chat-card-content::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
        pointer-events: none;
    }

    .chat-card-content {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .chat-icon {
        font-size: 24px;
        flex-shrink: 0;
    }

    .chat-text {
        flex: 1;
    }

    .chat-title {
        font-size: 16px;
        font-weight: 600;
        color: white;
        margin-bottom: 2px;
        line-height: 1.2;
    }

    .chat-subtitle {
        font-size: 13px;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 400;
        line-height: 1.3;
    }

    /* Mobile Overlay */
    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(4px);
    }

    .overlay-visible {
        opacity: 1;
        visibility: visible;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
        }

        .sidebar-open {
            transform: translateX(0);
        }

        .sidebar-closed {
            transform: translateX(-100%);
        }
    }

    /* Desktop - always visible */
    @@media (min-width: 769px) {
        .sidebar {
            transform: translateX(0) !important;
        }

        .sidebar-overlay {
            display: none;
        }
    }

    /* Scrollbar Styling */
    .sidebar::-webkit-scrollbar {
        width: 4px;
    }

    .sidebar::-webkit-scrollbar-track {
        background: transparent;
    }

    .sidebar::-webkit-scrollbar-thumb {
        background: #d1d1d6;
        border-radius: 2px;
    }

    .sidebar::-webkit-scrollbar-thumb:hover {
        background: #c7c7cc;
    }
</style>

@code {
    [Parameter] public bool IsOpen { get; set; } = true;
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    private async Task HandleItemClick(string itemKey)
    {
        // Items are non-functional for now as requested
        // Future implementation will handle navigation/actions
        Console.WriteLine($"Sidebar item clicked: {itemKey}");
        await Task.CompletedTask;
    }

    private async Task CloseSidebar()
    {
        IsOpen = false;
        await IsOpenChanged.InvokeAsync(IsOpen);
    }
}